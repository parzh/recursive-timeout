{
  "name": "recursive-timeout",
  "version": "0.0.3",
  "author": "Dmytro Parzhytskyi <parzhitsky@gmail.com> (https://parzh.com)",
  "description": "A simple solution to a classic problem: setInterval implemented as recursive setTimeout calls.",
  "license": "ISC",
  "homepage": "https://github.com/parzh/recursive-timeout#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parzh/recursive-timeout.git"
  },
  "bugs": {
    "url": "https://github.com/parzh/recursive-timeout/issues"
  },
  "keywords": [
    "setInterval",
    "setTimeout",
    "recursive",
    "interval",
    "timeout",
    "timer",
    "delay"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/cjs/index.cjs",
  "types": "./dist/esm/index.d.ts",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./promises": {
      "import": {
        "types": "./dist/esm/promises.d.ts",
        "default": "./dist/esm/promises.js"
      },
      "require": {
        "types": "./dist/esm/promises.d.ts",
        "default": "./dist/cjs/promises.cjs"
      }
    }
  },
  "scripts": {
    "test": "vitest",
    "prebuild": "rm -rf dist/*",
    "build": "rollup -c"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "12.1.4",
    "@types/node": "22.18.10",
    "@vitest/coverage-v8": "3.2.4",
    "rollup": "4.52.4",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  }
}
